<Window x:Class="Free_Sharp_Player.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:local="clr-namespace:Free_Sharp_Player"
        Title="MainWindow" Height="500" Width="500"
		KeyUp="Window_KeyUp" Closed="Window_Closed" WindowStyle="None" AllowsTransparency="True" ClipToBounds="False"
		Background="Transparent">
	<Window.Resources>
		<local:SliderToVolumeConverter x:Key="TestConverter"/>
	</Window.Resources>
	<Grid MouseDown="Grid_MouseDown" MouseUp="Grid_MouseUp">
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="31"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<Grid Name="Queue" >
			
		</Grid>
		
		<Grid Width="30" Height="130" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,30,0">
			<Grid Name="VolumeSlider" Background="LightGray" Margin="0,130,0,0">
				
				<Grid.RowDefinitions>
					<RowDefinition Height="*"/>
					<RowDefinition Height="30"/>
				</Grid.RowDefinitions>
				<Slider Name="sldr_VolumeSlider" Orientation="Vertical" Maximum="100" Margin="0,3,0,3" HorizontalAlignment="Center"/>
				<Button Name="btn_MuteButton" Grid.Row="1" Content="M" BorderThickness="0"/>
			</Grid>
		</Grid>
		<Grid Name="Player" Grid.Row="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="30"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="30"/>
				<ColumnDefinition Width="30"/>
			</Grid.ColumnDefinitions>
			
			<Grid Name="PlayPause">
				<Button Name="btn_PlayPause" Content="▶"  VerticalContentAlignment="Center"  Click="btn_PlayPause_Click" BorderThickness="0"/>
			</Grid>
			<Grid Name="Progress" Grid.Column="1">
				<ProgressBar Name="bar_Buffer" Foreground="Gray" Maximum="100" Value="{Binding BufferLen}" BorderThickness="0"/>
				<ProgressBar Name="bar_BufferWindow" Foreground="#22cccc" Background="Transparent" Maximum="100" Value="{Binding PosInBuffer}"  BorderThickness="0"/>
				<Label Name="lbl_TrackName" Content="{Binding StreamTitle}" VerticalAlignment="Center" VerticalContentAlignment="Center" MouseUp="lbl_TrackName_MouseUp" BorderThickness="0"/>
			</Grid>
			<Grid Name="Volume" Grid.Column="2">
				<Button Name="btn_Volume" Content="Vol" BorderThickness="0" Click="btn_Volume_Click"/>
			</Grid>
			<Grid Name="Extra" Grid.Column="3">
				<Button Name="btn_Extra" Content="v" FontFamily="Wingdings" BorderThickness="0" Click="btn_Extra_Click"/>
			</Grid>
		</Grid>

		<Grid Name="Played">

		</Grid>
