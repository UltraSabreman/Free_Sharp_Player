<Window x:Class="Free_Sharp_Player.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
	<Grid>
		<TextBox Name="AddressBox" Height="23" Margin="10,10,10,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top"/>
		<ProgressBar Name="BufferLength" Height="30" Margin="10,38,10,0" VerticalAlignment="Top"/>
		<Button Name="PlayButton"  Content="Play" HorizontalAlignment="Left" Margin="10,73,0,0" VerticalAlignment="Top" Width="75" Click="Play_Click"/>
		<Button Name="PauseButton" Content="Pause" HorizontalAlignment="Left" Margin="90,73,0,0" VerticalAlignment="Top" Width="75" Click="Pause_Click"/>
		<Button Name="StopButton" Content="Stop" HorizontalAlignment="Left" Margin="170,73,0,0" VerticalAlignment="Top" Width="75" Click="Stop_Click"/>

	</Grid>
</Window>
